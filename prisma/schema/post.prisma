model Post {
  id         String     @id @default(uuid())
  title      String     @db.VarChar(225)
  content    String     @db.Text
  thumbnail  String?
  isFeatured Boolean    @default(false)
  status     PostStatus @default(PUBLISHED)
  tags       String[]
  views      Int        @default(0)
  authorid   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  Comments   Comment[]

  @@index([authorid])
  @@map("posts")
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVE
}